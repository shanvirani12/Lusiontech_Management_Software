@model List<Lusiontech_Management_Software.Models.Account>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Account</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <h2>Select Account</h2>
                <form asp-action="StartBidding" method="post">
                    <div class="form-group">
                        <label for="accountSelect">Select an Account:</label>
                        <select id="accountSelect" class="form-control" name="accountId">
                            @foreach (var account in Model)
                            {
                                <option value="@account.Id">@account.Name - @account.Id</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Next</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+EmmC+qG5gi6Z7uHRvzU8sVc5EliEufeOrb" crossorigin="anonymous"></script>
</body>
</html>
