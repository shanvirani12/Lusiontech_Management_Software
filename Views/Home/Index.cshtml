@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Projects</h5>
                    <p class="card-text">@ViewBag.TotalProjects</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bid Count per User</h5>
                    <ul class="list-group">
                        @foreach (var item in ViewBag.BidCountPerUser)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.UserEmail
                                <span class="badge bg-primary rounded-pill">@item.BidCount</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bid Count per Account</h5>
                    <ul class="list-group">
                        @foreach (var item in ViewBag.BidCountPerAccount)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.AccountName
                                <span class="badge bg-primary rounded-pill">@item.BidCount</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
